<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">
        <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/icon_descp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_description_black_24dp"/>
        <TextView
            android:id="@+id/e_descp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description:"
            style="@style/event_style"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/icon_descp"
            android:layout_toEndOf="@id/icon_descp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            />
        <TextView
            android:id="@+id/descp_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textIsSelectable="true"
            android:text="The description of the event goes here. The description of the event goes here. The description of the event goes here. The description of the event goes here."
            style="@style/event_style2"
            android:textSize="15sp"
            android:layout_toRightOf="@id/icon_descp"
            android:layout_toEndOf="@id/icon_descp"
            android:layout_below="@id/e_descp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            />
        </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c7c7c7"
                android:layout_margin="10dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/icon_date"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_timer_black_24dp"
                />
            <TextView
                android:id="@+id/event_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Uploaded Date:"
                style="@style/event_style"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="3dp"
                android:layout_toRightOf="@id/icon_date"
                android:layout_toEndOf="@id/icon_date"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                />
            <TextView
                android:id="@+id/date_time_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="On 23rd Oct 2017 at 1:00 PM"
                style="@style/event_style2"
                android:layout_below="@id/event_date"
                android:layout_toRightOf="@id/icon_date"
                android:layout_toEndOf="@id/icon_date"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                />
        </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>