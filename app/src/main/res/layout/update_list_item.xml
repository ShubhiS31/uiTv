<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFFFFF">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="?selectableItemBackground">

    <ImageView
        android:id="@+id/update_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="6dp"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/update_type"
        android:layout_margin="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Photo Upload"
        android:textSize="19sp"
        android:layout_toRightOf="@id/update_image"
        android:textColor="#000000"/>
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:padding="2dp"
        android:src="@drawable/com_facebook_button_icon"
        android:background="@color/com_facebook_blue"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginEnd="4dp"
        />
    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The caption of the post goes here. The caption of the post goes here.The caption of the post goes here."
        android:textSize="14sp"
        android:layout_below="@id/imageView"
        android:layout_toRightOf="@id/update_image"
        android:layout_toEndOf="@id/update_image"
        android:paddingTop="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
         />


</RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c7c7c7"/>

</LinearLayout>